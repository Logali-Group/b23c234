<core:FragmentDefinition
            xmlns="sap.m"
            xmlns:core="sap.ui.core">

    <Dialog id="helloDialog"
            title="{i18n>hello}, {view>/FullName}">

        <content>

                <core:Icon src="sap-icon://hello-world" size="8rem"/>
        
        </content>

        <beginButton>
                <Button
                        text="{i18n>OK}"
                        tooltip="{i18n>OK}"
                        press="onOk"
                        type="Accept"
                        width="6rem"/>
        </beginButton>

        <endButton>
                <Button
                        text="{i18n>CANCEL}"
                        tooltip="{i18n>CANCEL}"
                        press="onCancel"
                        type="Reject"
                        width="6rem"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>